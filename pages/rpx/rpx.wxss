page{
  background-color: lightpink;
}
.shop-item{
  padding: 25rpx;
  display: flex;
}
.shop-inage{
  width: 186rpx;
  height: 186rpx;
  border-radius: 10rpx;
  margin-right: 25rpx;
}
.item-right{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.item-title{
  font-size: 30rpx;
  color: #000;
  font-weight: 400;
  margin-top: 5px;
}
.item-info{
  font-size: 24rpx;
  color: #666;
  font-weight: 400;
  margin-top: 10rpx;
}
.price{
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0 0rpx;
}
.price-after{
  font-size: 36rpx;
  color: #ff0000;
  font-weight: 500;
}
.price-before{
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  text-decoration:line-through
}