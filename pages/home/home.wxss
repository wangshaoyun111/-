/* pages/home/home.wxss */
.swiper-container{
  height: 350rpx;
}
.swiper-container swiper-item image {
  width: 100%;
  height: 100%;
}
.cate-container{
  display: flex;
  flex-wrap: wrap;
  border-top: 1px solid #efefef;
  border-left: 1px solid #efefef;
}
.cate-item {
  width: 33.33%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border-right: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  box-sizing: border-box;
}
.cate-item image {
  width: 60rpx;
  height: 60rpx;
  display: block;
}
.cate-item text {
  margin-top: 18rpx;
}
.buttom-img {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}
.buttom-img image {
  width: 45%;
  height: 100%;
}